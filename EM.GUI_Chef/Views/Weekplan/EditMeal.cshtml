@model MealViewModel
        <input asp-for="dayIndex" hidden />
        <input asp-for="mealIndex" hidden />
        <div class="row lower-margin">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Meal.Name">Naam maaltijd</label>
                    <div><span asp-validation-for="Meal.Name" class="text-danger"></span></div>
                    <input class="form-control" id="mealName" value="@Model.Meal.Name"/>
                </div>
            </div>
            <div class="col-md-4">
                <p><b>Maaltijd geschikt voor:</b></p>
                <ul>
                    @foreach (string s in Model.DietaryRepresentation)
                    {
                        <li>@s</li>
                    }
                </ul>
            </div>
            <div class="col-md-4">
                <h1>Prijs maaltijd: &euro;@Model.TotalPrice</h1>
                <input asp-for="@Model.dayIndex" hidden id="dayIndex"/>
                <input asp-for="@Model.mealIndex" hidden id="mealIndex"/>
                <a onClick="saveMeal()" class="btn btn-info">Maaltijd opslaan</a>
                <a asp-action="DeleteMeal"
                   asp-route-dayIndex="@Model.dayIndex"
                   asp-route-mealIndex="@Model.mealIndex"
                   class="btn btn-danger">Maaltijd verwijderen</a>
            </div>
        </div>
        
        <h1>Voorgerecht</h1>
        <a class="hover-item"
           asp-action="SelectStarter"
           asp-route-dayIndex="@Model.dayIndex"
           asp-route-mealIndex="@Model.mealIndex">
            @if (Model.Starter.Dish != null)
            {
                <div class="DishContainer">
                    @if (Model.Starter.Dish.Image == null)
                    {<img class="dishImg" src="~/img/NoImageAvailable.png" />}
                    else
                    { <img class="dishImg" src="data:image/jpg;base64,@Convert.ToBase64String(Model.Starter.Dish.Image)" />}

                    <h6 class="dishName">@Model.Starter.Dish.Name.ToUpper()</h6>
                    <h5 class="dishPrice">&euro;@Model.Starter.Dish.Price</h5>

                    <hr />

                    <div class="dishDiet">
                        <p><b>Geschikt voor</b></p>
                        <ul>
                            @foreach (string s in Model.Starter.DietaryRepresentation)
                            {
                                <li>@s</li>
                            }
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <div class="DishContainer">
                    <h1 class="display-4 dish-message">Selecteer een voorgerecht</h1>
                </div>
            }
        </a>

