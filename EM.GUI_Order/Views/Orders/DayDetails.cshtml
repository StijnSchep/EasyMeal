@model MealDetailViewModel

<div class="text-center">
    <h1 class="display-4">@Model.Date.ToString("m", (new CultureInfo("nl-NL")).DateTimeFormat)</h1>
</div>

@if (Model.HasOrderedMeal)
{
    <div class="order-manage-meal" style="height: 300px; background-color: white">
        
            <div class="row">

                <div class="col-md-4">
                    @if (Model.OrderedMeal.Main.Image == null)
                    {<img class="dishImg" src="~/img/NoImageAvailable.png" />}
                    else
                    { <img class="dishImg" src="data:image/jpg;base64,@Convert.ToBase64String(Model.OrderedMeal.Main.Image)" />}
                </div>

                <div class="col-md-8">
                    <span><b>@Model.OrderedMeal.Name</b></span>

                    <div class="row">
                        <div class="col-md-6">
                            <span style="font-size: 10px">Gerechten</span>
                            <ul class="list-unstyled" style="font-size: 10px">
                                <li>@Model.OrderedMeal.Starter.Name</li>
                                <li>@Model.OrderedMeal.Main.Name</li>
                                <li>@Model.OrderedMeal.Dessert.Name</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <span style="font-size: 10px">Opties</span>
                            <ul class="list-unstyled" style="font-size: 10px">
                                <li>Voorgerecht? @Model.IncludeStarter</li>
                                <li>Nagerecht? @Model.IncludeDessert</li>
                                <li>Grootte: @Model.Size</li>
                            </ul>
                        </div>

                    </div>

                </div>

            </div>

    </div>
}
else
{
    <div class="text-center lower-margin">
        <h1>Geen maaltijd besteld voor deze dag</h1>
    </div>
}

<div class="text-center">
    <a asp-action="OrderInfo"
       asp-route-startDate="@Model.StartDate.ToString("MM dd yyyy")"
       class="btn btn-info">Terug</a>
</div>
